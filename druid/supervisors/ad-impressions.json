{
  "type": "kafka",
  "spec": {
    "ioConfig": {
      "type": "kafka",
      "consumerProperties": {
        "bootstrap.servers": "kafka:9093"
      },
      "topic": "ad-impressions",
      "inputFormat": {
        "type": "kafka",
        "valueFormat": {
          "type": "json"
        }
      },
      "useEarliestOffset": true
    },
    "tuningConfig": {
      "type": "kafka",
      "maxBytesInMemory": 500000000,
      "resetOffsetAutomatically": false,
      "intermediatePersistPeriod": "PT5M",
      "intermediateHandoffPeriod": "PT10M",
      "deduplicateRows": true,
      "reportParseExceptions": false
    },
    "dataSchema": {
      "dataSource": "ad-impressions",
      "timestampSpec": {
        "column": "impression_time",
        "format": "auto"
      },
      "dimensionsSpec": {
        "dimensions": [
          "impression_id",
          "ad_id",
          "segment",
          {
            "type": "long",
            "name": "kafka.timestamp"
          },
          "kafka.topic",
          "channel_id",
          {
            "type": "string",
            "name": "region_code"
          }
        ]
      },
      "primaryKeyDimensions": ["impression_id"],
      "granularitySpec": {
        "queryGranularity": "none",
        "rollup": false,
        "appendToExisting": false,
        "segmentGranularity": "hour"
      }
    }
  }
}
